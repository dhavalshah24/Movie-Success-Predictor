<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Movie Success Predictor</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">
  <link rel="icon" href="/favicon/favicon.ico" type="image/x-icon">
  <link rel="stylesheet" href="/css/home_styles.css">
</head>
<body>

  <h1>Movie Success Predictor</h1>
  <div class="container">
    <form action="/" method="post">
      <div class="form-group row">
        <label for="user" class="col-sm-3 col-form-label">Director Name</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="user" name="director" placeholder="Director Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="user" class="col-sm-3 col-form-label">Star name</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="user" name="star" placeholder="Star Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="user" class="col-sm-3 col-form-label">Writer name</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="user" name="writer" placeholder="Writer Name">
        </div>
      </div>
      <div class="form-group row">
        <label for="user" class="col-sm-3 col-form-label">Genre</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="user" name="genre" placeholder="Genre">
        </div>
      </div>
      <div class="form-group row">
        <label for="country" class="col-sm-3 col-form-label">Country</label>
        <div class="col-sm-9">
          <select class="custom-select" name="country">
            <option selected disabled hidden>Select a country</option>
            <option value="Canada">Canada</option>
            <option value="France">France</option>
            <option value="Germany">Germany</option>
            <option value="UK">UK</option>
            <option value="USA">USA</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-5"></div>
        <div class="col-sm-5">
          <button type="submit" class="btn btn-primary btn-lg">Predict!</button>
          <button type="reset" class="btn btn-primary btn-lg">Reset</button>
        </div>
      </div>
    </form>
  </div>
</body>

</html>
